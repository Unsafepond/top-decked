<div id="navbar" class="col-md-12">
	<h2 class="logo-top hide-on-small-and-down">
		<%= link_to "Top", root_path, method: :get, class: "logo-top" %>
	</h2>
	<h2 class="logo-decked hide-on-small-and-down">
		<%= link_to "Decked", root_path, method: :get, class: "logo-decked" %>
	</h2>
	<h4 class="nav-link-lg">
	 <%= link_to "Decks", decks_path %>
	</h4>
	<h4 class="nav-link-lg">
	 <%= link_to "Users", users_path %>
	</h4>
	<div class="inline-right">
		<% if current_user %>
			<div class="user-info">
				<h5 class="inline-top-right">
					<img src="<%= current_user.image_url%>" align="top" height="40" width="40">
					<%= link_to "#{current_user.username}", user_path(current_user.id), class: "nav-link" %>
					<p class="nav-link-sm">
						<%= link_to "Logout", logout_path, class: "nav-link" %>
					</p>
				</h5>
			</div>
		<% else %>
			<h4>
				<%= link_to "Login!", login_path, class: "nav-link" %>
			</h4>
		<% end %>
	</div>
</div>